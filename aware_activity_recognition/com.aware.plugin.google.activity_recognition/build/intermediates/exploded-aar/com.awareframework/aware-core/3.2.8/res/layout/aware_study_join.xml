<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/aware_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Aware.Toolbar">
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/aware_ui_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pkg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@android:color/transparent"
                android:textColor="#FFF"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/aware_camera_scan" />

            <FrameLayout
                android:id="@+id/camera_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >
            </FrameLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/aware_navigation"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#0099CC"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />

    </android.support.v4.widget.DrawerLayout>
</LinearLayout><!-- From: file:/Users/denzil/BTSync/Programming/aware-client/aware-core/src/main/res/layout/aware_study_join.xml -->